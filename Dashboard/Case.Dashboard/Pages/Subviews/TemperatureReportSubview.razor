@code {
    [Parameter]
    public TemperatureReportAggregateResponse Model { get; set; }
}

<h1>
    Temperatures
    @if (Model != null && Model.IsFromCache)
    {
        <em style="font-size: 30%; text-transform:uppercase; vertical-align: super; color: #3b64dd;">Cached</em>
    }
</h1>

@if (Model == null)
{
    <p>
        Loading data...
    </p>
}
else
{
    <div class="card bg-light mb-3" style="max-width: 18rem;">
        <div class="card-body">
            <p class="card-text">
                <strong>Fetch time:</strong> @Model.DateTime
                <strong>Data source:</strong> @Model.DataSourceType<br>
            </p>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Degrees (C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @item.dato.ToShortDateString()
                    </td>
                    <td>
                        @item.tidspunkt
                    </td>
                    <td>
                        @item.grader
                    </td>
                </tr>
            }
        </tbody>
    </table>
}