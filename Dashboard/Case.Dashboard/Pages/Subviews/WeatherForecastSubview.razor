@code {
    [Parameter]
    public ForecastAggregateResponse Model { get; set; }
}

<h1>
    Weather forecast
    @if (Model != null && Model.IsFromCache)
    {
        <em style="font-size: 30%; text-transform:uppercase; vertical-align: super; color: #3b64dd;">Cached</em>
    }
</h1>

@if (Model == null)
{
    <p>
        Loading forecast...
    </p>
}
else
{
    <div class="card bg-light mb-3" style="max-width: 18rem;">
        <div class="card-body">
            <p class="card-text">
                <strong>Location:</strong> @Model.LocationName<br>
                <strong>Fetch time:</strong> @Model.DateTime
                <strong>Data source:</strong> @Model.DataSourceType<br>
            </p>

        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@(nameof(ForecastResponse.Hour))</th>
                <th>@(nameof(ForecastResponse.DegreesCelsius))</th>
                <th>@(nameof(ForecastResponse.CloudCover))</th>
                <th>@(nameof(ForecastResponse.WindSpeedMeterPrSecond))</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @item.Hour
                    </td>
                    <td>
                        @item.DegreesCelsius &deg;C
                    </td>
                    <td>
                        @item.CloudCover
                    </td>
                    <td>
                        @item.WindSpeedMeterPrSecond
                    </td>
                </tr>
            }
        </tbody>
    </table>
}